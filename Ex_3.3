#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n;
    printf("Введите номер числа Фибоначчи: ");
    scanf("%d", &n);
    printf("%d-е чило Фибоначчи равно %d.", n, fib(n));
    return 0;
}
int fib(int n)
{
    if(n <= 2)
    {
        n = 1;
    }
    else
    {
        n = fib(n - 1) + fib(n - 2);
    }
    return n;
}
