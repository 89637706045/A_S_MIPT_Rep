#include <stdio.h>
#include <stdlib.h>

int main()
{
    int n, i, flag = 0;
    printf("Введите число для проврки на простоту: ");
    scanf("%d", &n);
    for(i = 2; i < n; i++)
    {
        if(n % i == 0)
        {
            flag++;
        }
    }
    if(flag == 0)
    {
        printf("Число %d простое.", n);
    }
    else
    {
        printf("Число %d не простое.", n);
    }
    return 0;
}
